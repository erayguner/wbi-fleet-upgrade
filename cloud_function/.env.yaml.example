# Environment variables for WBI Fleet Upgrade Cloud Function
# Copy this file to .env.yaml and customize for your environment
#
# Usage with gcloud:
#   gcloud functions deploy wbi-fleet-upgrade \
#     --env-vars-file .env.yaml \
#     ...

# =============================================================================
# Required Configuration
# =============================================================================

# GCP Project ID containing Workbench instances
# Can be overridden per-request in the JSON body
GCP_PROJECT_ID: "your-project-id"

# Space-separated list of GCP zones to scan
# Can be overridden per-request in the JSON body
LOCATIONS: "europe-west2-a europe-west2-b"

# =============================================================================
# Default Operation Settings
# =============================================================================

# Dry-run mode: true = simulate only (RECOMMENDED DEFAULT)
# Can be overridden per-request
DRY_RUN: "true"

# Automatic rollback on upgrade failure
ROLLBACK_ON_FAILURE: "false"

# Maximum concurrent operations (1-20)
MAX_PARALLEL: "5"

# Delay between starting operations (seconds)
STAGGER_DELAY: "3.0"

# =============================================================================
# Timeouts
# =============================================================================

# Maximum time per operation (seconds)
# Note: Cloud Functions have a max timeout of 9 minutes (540s) for HTTP
# For longer operations, consider using Cloud Run or async invocation
TIMEOUT: "7200"

# Health check timeout (seconds)
HEALTH_CHECK_TIMEOUT: "600"

# Poll interval (seconds)
POLL_INTERVAL: "20"

# =============================================================================
# Application Metadata
# =============================================================================

# Version for tracking and logging
APP_VERSION: "1.0.0"
